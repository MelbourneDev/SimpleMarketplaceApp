@model List<SimpleMarketplaceApp.Models.Item>

<div class="row">
    @foreach (var item in Model)
    {
        var itemImagesList = item.ItemImages.ToList(); // Ensure you've converted to List
        <div class="col-md-4" id="individualItemGrid">
            <div class="card" style="width: 18rem;">
                @if (itemImagesList.Any())
                {
                    <div id="carousel@(item.itemId)" class="carousel slide" data-ride="carousel" data-interval="false"> <!-- Prevent automatic cycling -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < itemImagesList.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <!-- Ensure images are the same size and adjust as needed -->
                                    <img src="@Url.Action("GetItemImage", "Items", new { imageId = itemImagesList[i].imageID })" class="d-block w-100" alt="..." style="height: 200px; object-fit: cover;">
                                </div>
                            }
                        </div>
                        <!-- Navigation controls -->
                        <a class="carousel-control-prev" href="#carousel@(item.itemId)" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel@(item.itemId)" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                }
                else
                {
                    <!-- Fallback image -->
                    <img src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" class="card-img-top" alt="No Image Available" style="height: 200px; object-fit: cover;">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">$@item.ItemPrice</p>
                    <p class="card-text">Listed: @item.DateListed.ToString("yyyy-MM-dd")</p>
                    <p class="card-text">Seller: @item.User.UserName</p>
                    <a href="@Url.Action("ItemDetails", "Catalogue", new { itemId = item.itemId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        if ((Model.IndexOf(item) + 1) % 3 == 0)
        {
            @:</div><div class="row">
        }
    }
</div>
